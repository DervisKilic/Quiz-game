<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gualbertoscolari.grupp3.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/category_tv"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/player1_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0"
            android:text="@string/player1_tv"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/correct_answers_P1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0"
            android:text="@string/correct_answers"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="80sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:id="@+id/profile_img1"/>

        <TextView
            android:id="@+id/player1_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0"
            android:text="@string/score_tv"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/time_played"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0"
            android:text="@string/time_played"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/player2_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0"
            android:text="@string/player2_tv"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/correct_answers_P2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0"
            android:text="@string/correct_answers"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="80sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:id="@+id/profile_img2"/>

        <TextView
            android:id="@+id/player2_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0"
            android:text="@string/score_tv"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/time_played2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0"
            android:text="@string/time_played"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/main_menu_btn"
            android:onClick="goToMenu"
            android:textColor="#FFFFFF"
            android:background="@drawable/standardcustombutton"
            android:shadowColor="#FFEAE6"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_margin="5sp"/>

        <Button
            android:layout_margin="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/high_score_btn"
            android:onClick="goToHighScore"
            android:textColor="#FFFFFF"
            android:background="@drawable/standardcustombutton"
            android:shadowColor="#FFEAE6"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/bottom_btn_layout"
        android:layout_alignParentLeft="true"
        android:textAllCaps="false"
        android:layout_alignParentStart="true"
        android:padding="5sp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/play_again_btn"
            android:textAllCaps="false"
            android:onClick="goToMainGame"
            android:textColor="#FFFFFF"
            android:background="@drawable/standardcustombutton"
            android:shadowColor="#FFEAE6"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>
    </LinearLayout>

</RelativeLayout>
