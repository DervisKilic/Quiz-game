<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_main_game"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gualbertoscolari.grupp3.MainGameActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:layout_below="@id/question_tv"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_below="@id/progressbar"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/question_tv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Question here. Long question looks like this"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/timer_and_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_tv"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chosen_category"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/timer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/question_tv"
            android:layout_marginRight="80dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/below_buttons">

        <Button
            android:id="@+id/answer_btn_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btn_a_pressed"
            android:textAllCaps="false"
            android:text="answer_a" />

        <Button
            android:id="@+id/answer_btn_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btn_b_pressed"
            android:textAllCaps="false"
            android:text="answer_b" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/below_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/answer_btn_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btn_c_pressed"
            android:textAllCaps="false"
            android:text="answer_c" />

        <Button
            android:id="@+id/answer_btn_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btn_d_pressed"
            android:textAllCaps="false"
            android:text="answer_d" />

    </LinearLayout>

</RelativeLayout>
