<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_create_profile"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    android:paddingBottom="72dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    >

    <LinearLayout
        android:id="@+id/profile_title_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/create_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_profile"
            android:textAlignment="center"
            android:textColor="#030303"
            android:textSize="22dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_title_lo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/create_profile"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/create_category_back_button"
            style="@style/standard_button_style"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/standardcustombutton"
            android:onClick="saveProfile"
            android:text="@string/save_profile_button"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</RelativeLayout>
