<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_create_question"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    android:paddingBottom="72dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <Spinner
        android:id="@+id/spinner_create_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/opt_d"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/create_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_question_tv"
        android:textAlignment="center"
        android:textColor="#030303"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/question_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_question_title"
        android:layout_marginTop="50dp"
        android:hint="@string/enter_q_hint"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/opt_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_tv"
        android:layout_marginTop="5dp"
        android:hint="@string/correct_answer_et"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/opt_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt_a"
        android:layout_marginTop="5dp"
        android:hint="@string/enter_opt_b_hint"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/opt_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt_b"
        android:layout_marginTop="5dp"
        android:hint="@string/enter_opt_c_hint" />

    <EditText
        android:id="@+id/opt_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opt_c"
        android:layout_marginTop="5dp"
        android:hint="@string/enter_opt_d_hint"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">



        <Button
            android:id="@+id/create_category_back_button"
            style="@style/standard_button_style"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/standardcustombutton"
            android:onClick="saveQuestion"
            android:text="@string/save_question_button"
            />

    </LinearLayout>

</RelativeLayout>
