<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gualbertoscolari.grupp3.CreateQuestionActivity"
    android:background="#7e38d408">


    <Spinner
        android:id="@+id/spinner_create_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/right_answer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />


    <TextView
        android:id="@+id/create_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add your question"
        android:textStyle="bold"
        android:textColor="#030303"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/question_tv"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/create_question_title"
        android:hint="@string/enter_q_hint"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/opt_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_tv"
        android:hint="@string/enter_opt_a_hint"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/opt_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt_a"
        android:hint="@string/enter_opt_b_hint"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/opt_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt_b"
        android:hint="@string/enter_opt_c_hint"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/opt_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opt_c"
        android:hint="@string/enter_opt_d_hint"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/right_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt_d"
        android:hint="@string/enter_corr_answ_hint"
        android:textSize="20dp"
        android:layout_marginTop="5dp"/>

    <Button
        style="@style/create_activity_button"
        android:id="@+id/create_question_button"
        android:text="@string/add_question_back_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="backToMain"/>

    <Button
        style="@style/create_activity_button"
        android:id="@+id/create_question_back_button"
        android:text="@string/add_question_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="saveQuestion"/>



</RelativeLayout>
