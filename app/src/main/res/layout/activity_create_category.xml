<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_create_category"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    android:orientation="vertical"
    android:paddingBottom="72dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/create_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_your_category_title"
        android:textAlignment="center"
        android:textColor="#030303"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/categorie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_category_title"
        android:layout_marginTop="50dp"
        android:hint="@string/enter_category_name"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/create_category_back_button"
            style="@style/standard_button_style"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/standardcustombutton"
            android:onClick="addCategory"
            android:text="@string/save_category_btn"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>
